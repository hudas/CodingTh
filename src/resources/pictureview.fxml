<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="main.appclient.demo.pictureview.PictureController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Demonstracija su vaizdu" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0"/>

    <Label fx:id="errorLabel" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1"/>
    <Text text="Pasirinkite BMP formato atvaizdą" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2"/>
    <Button fx:id="select" text="Pasirinkti failą" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="CENTER" GridPane.valignment="TOP"/>


    <Text text="Pradinė nuotrauka:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <ImageView fx:id="inputImage" GridPane.columnIndex="1" GridPane.rowIndex="3" preserveRatio="true" fitHeight="250"/>

    <Text text="Nuotrauka siųsta nekoduotu kanalu:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ImageView fx:id="rawResult" GridPane.columnIndex="0" GridPane.rowIndex="5" preserveRatio="true" fitHeight="250"/>

    <Text text="Nuotrauka siųsta koduotu kanalu:" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <ImageView fx:id="encodedResult" GridPane.columnIndex="1" GridPane.rowIndex="5" preserveRatio="true" fitHeight="250"/>
</GridPane>